# Production Environment Configuration
NODE_ENV=production

# Database (Set in Vercel Environment Variables)
# DATABASE_URL="postgresql://user:password@host:5432/production_db?sslmode=require"

# Authentication (Better Auth - Set in Vercel Environment Variables - MUST be strong)
# BETTER_AUTH_SECRET="production-better-auth-secret-minimum-32-characters-strong"
BETTER_AUTH_URL="https://www.kyspreadslove.org"
# Legacy - kept for backwards compatibility
# JWT_SECRET="production-jwt-secret-minimum-32-characters-strong"

# Admin Setup (disabled in production - use scripts only)
ALLOW_ADMIN_SETUP="false"

# Application
NEXT_PUBLIC_BASE_URL="https://www.kyspreadslove.org"
SKIP_ENV_VALIDATION="false"

# Logging
VERBOSE="false"

# Performance
NEXT_TELEMETRY_DISABLED="1"

# Security
CI="true"