# Development Environment Configuration
NODE_ENV=development

# Database (PostgreSQL required - Prisma schema is configured for PostgreSQL only)
# Use your Neon/PostgreSQL connection string here
DATABASE_URL="postgresql://user:password@localhost:5432/database?sslmode=require"

# Authentication (Better Auth)
BETTER_AUTH_SECRET="dev-better-auth-secret-key-at-least-32-characters-long"
BETTER_AUTH_URL="http://localhost:3000"
# Legacy - kept for backwards compatibility during migration
JWT_SECRET="dev-jwt-secret-key-at-least-32-characters-long-for-development"

# Admin Setup (only enabled in development)
ALLOW_ADMIN_SETUP="true"
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="DevPassword123!"
ADMIN_NAME="Dev Admin"

# Application
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
SKIP_ENV_VALIDATION="true"

# Logging
VERBOSE="true"