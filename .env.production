# Production Environment Configuration
NODE_ENV=production

# Database (Set in Vercel Environment Variables)
# DATABASE_URL="postgresql://user:password@host:5432/production_db?sslmode=require"

# Authentication (Set in Vercel Environment Variables - MUST be strong)
# JWT_SECRET="production-jwt-secret-minimum-32-characters-strong"
# NEXTAUTH_SECRET="production-nextauth-secret"
NEXTAUTH_URL="https://kylee-bible-blog.vercel.app"

# Admin Setup (disabled in production - use scripts only)
ALLOW_ADMIN_SETUP="false"

# Application
NEXT_PUBLIC_BASE_URL="https://kylee-bible-blog.vercel.app"
SKIP_ENV_VALIDATION="false"

# Logging
VERBOSE="false"

# Performance
NEXT_TELEMETRY_DISABLED="1"

# Security
CI="true"