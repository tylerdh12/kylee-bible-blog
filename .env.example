# Database (PostgreSQL required - Prisma schema is configured for PostgreSQL only)
DATABASE_URL="postgresql://user:password@localhost:5432/database?sslmode=require"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here-at-least-32-characters-long"
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin Setup
ALLOW_ADMIN_SETUP="true"
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-password"
ADMIN_NAME="Admin User"
# Generate with: openssl rand -hex 32 or node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SETUP_KEY="your-secure-random-setup-key-here-minimum-32-characters"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
SKIP_ENV_VALIDATION="true"